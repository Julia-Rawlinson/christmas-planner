@model Gift

@{
    ViewData["Title"] = "Christmas Planner";
}

<div class="card w-50">
    <form asp-controller="Home" asp-action="AddGift" method="post">
        <h2 class="m-3 text-left">Add Gift</h2>
        <div class="form-group row m-3">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" type="text" class="form-control"
                   required="required">
        </div>
        <div class="form-group row m-3">
            <label asp-for="Price">Price</label>
            <input asp-for="Price" type="number" class="form-control"
                   placeholder="Price" required="required">
        </div>
        <div class="form-group row m-3">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" type="text" class="form-control"
                   required="required">
        </div>
        <div class="float-start m-3">
            <button class="btn btn-success text-left" type="submit">Add +</button>
            <a class="btn btn-danger text-left" asp-controller="Home" asp-action="Index">Cancel</a>
        </div>
    </form>
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-info m-3 text-left">
            <div asp-validation-summary="All"></div>
        </div>
    }
</div>
