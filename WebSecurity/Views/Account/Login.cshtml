@model Login

@{ 
    ViewData["Title"] = "Christmas Planner";
}

<div class="card w-50" style="margin:0 auto">
    <form asp-action="Login" method="post">
        <h2 class="m-3 text-center">Login</h2>
        <input type="hidden" asp-for="ReturnUrl" />
        <div class="form-group m-3">
            <label asp-for="Email" class="text-left"></label>
            <input asp-for="Email" class="form-control" />
        </div>

        <div class="form-group m-3">
            <label asp-for="Password" class="text-left"></label>
            <input asp-for="Password" class="form-control" />
        </div>
        <div class="form-group m-3 text-center">
            <button class="btn btn-success btn-md btn-block text-center" type="submit">Log In</button>
        </div>
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-info m-3 text-left">
                <div asp-validation-summary="All"></div>
            </div>
        }
    </form>
</div>